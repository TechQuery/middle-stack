{
    "compilerOptions": {
        "module": "UMD",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES5",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist/",
        "lib": ["ESNext", "DOM", "DOM.Iterable", "DOM.AsyncIterable"]
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "Onion Stack",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
